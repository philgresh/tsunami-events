{
  "name": "tsunami-alert-gcp",
  "version": "0.1.0",
  "author": "Phil Gresham",
  "bugs": {
    "email": "phil@gresham.dev",
    "url": "https://github.com/philgresh/tsunami-alert-gcp/issues"
  },
  "private": true,
  "license": "GPL-3.0-or-later",
  "scripts": {
    "prestart": "export BROWSER='firefox'",
    "start": "react-app-rewired start",
    "prebuild": "mkdir -p build",
    "build": "react-app-rewired build",
    "deploy": "npm run build && cd ./functions && npm run build",
    "test": "react-app-rewired test",
    "test:watch": "npm run test --watch",
    "test:coverage": "npm test -- --coverage --changedSince=main --collectCoverageFrom=src/**/* --collectCoverageFrom=!src/**/*.stories.*",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .js,.ts,.tsx ./src --max-warnings 100",
    "lint:fix": "eslint --ext .js,.ts,.tsx ./src --fix",
    "emulators:start": "export env='LOCAL' && firebase emulators:start --import=\"./local_data\"",
    "emulators:start:export": "export env='LOCAL' && firebase emulators:start --import=\"./local_data\" --export-on-exit",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@mui/icons-material": "^5.11.0",
    "@mui/material": "^5.11.11",
    "cap-ts": "git+https://github.com/philgresh/cap-ts#bc599f9",
    "dot-env": "^0.0.1",
    "firebase": "^9.17.1",
    "firebaseui": "^6.0.2",
    "libphonenumber-js": "^1.10.19",
    "lodash": "^4.17.21",
    "mui-tel-input": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-firebase-hooks": "^5.1.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.6",
    "web-vitals": "^3.1.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.5.15",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/node-logger": "^6.5.15",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/dom": "^8.20.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.11",
    "@types/react-helmet": "^6.1.6",
    "@types/sinon": "^10.0.13",
    "@types/styled-components": "^5.1.26",
    "babel-plugin-import": "^1.13.6",
    "babel-plugin-named-exports-order": "^0.0.2",
    "customize-cra": "^1.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-testing-library": "^5.10.2",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.0.2",
    "prop-types": "^15.8.1",
    "react-app-rewired": "^2.2.1",
    "sinon": "^15.0.1",
    "storybook-dark-mode": "^2.0.6",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0"
  },
  "eslintConfig": {
    "plugins": [
      "jsx-a11y"
    ],
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:jsx-a11y/recommended"
    ],
    "rules": {
      "jsx-a11y/no-autofocus": "off",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index",
            "object",
            "type"
          ],
          "pathGroups": [
            {
              "pattern": "react",
              "group": "external",
              "position": "before"
            }
          ],
          "pathGroupsExcludedImportTypes": [
            "react"
          ],
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      },
      {
        "files": [
          "**/?(*.)+(spec|test).[jt]s?(x)"
        ],
        "extends": [
          "plugin:testing-library/react"
        ]
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
