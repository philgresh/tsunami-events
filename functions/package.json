{
  "name": "functions",
  "scripts": {
    "lint": "eslint -c .eslintrc.js",
    "lint:fix": "eslint -c .eslintrc.js --fix",
    "prebuild": "rm -rf lib && mkdir lib && npm run lint",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && npm run build:watch & firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "predeploy": "npm ci && rm -rf lib && npm run build && npm run test",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "mocha": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^1.2.6",
    "body-parser": "^1.20.1",
    "cap-ts": "git+https://github.com/philgresh/cap-ts#bc599f9",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fast-xml-parser": "^4.0.15",
    "firebase-admin": "^11.4.1",
    "firebase-functions": "^4.1.1",
    "lodash": "^4.17.21",
    "luxon": "^3.2.1",
    "tslib": "^2.4.1",
    "twilio": "^3.84.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@firebase/testing": "^0.20.11",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.2.5",
    "@types/luxon": "^3.2.0",
    "@types/sinon": "^10.0.13",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.48.1",
    "babel-jest": "^29.3.1",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "firebase-functions-test": "^3.0.0",
    "jest": "^29.3.1",
    "jest-mock-axios": "^4.6.2",
    "jsonwebtoken": "^9.0.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.3",
    "sinon": "^15.0.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "wait-for-expect": "^3.0.2"
  },
  "private": true,
  "license": "GPL-3.0-or-later"
}
